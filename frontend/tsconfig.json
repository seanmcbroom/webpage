{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "ES2024",
      "DOM"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.vue",
    "**/*d.ts",
    "**/*.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
}
